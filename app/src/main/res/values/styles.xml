<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JobListTitleTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="JobListDescriptionTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/secondary_text_color</item>
    </style>

    <style name="JobListDetailsTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/hint_text_color</item>
    </style>

    <style name="StudentSubtitleTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="JobListButtonTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="JobListTitleTextStyle2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="JobListDescriptionTextStyle2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
