<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_general_margin"
        android:orientation="vertical"
        android:weightSum="1">

        //Title

        <android.support.design.widget.TextInputLayout
            android:id="@+id/title_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:hint="@string/title">

            <EditText
                android:id="@+id/title_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </android.support.design.widget.TextInputLayout>

        //Description

        <android.support.design.widget.TextInputLayout
            android:id="@+id/description_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:hint="@string/description">

            <EditText
                android:id="@+id/description_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </android.support.design.widget.TextInputLayout>

        //City

        <android.support.design.widget.TextInputLayout
            android:id="@+id/city_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:hint="@string/city">

            <EditText
                android:id="@+id/city_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </android.support.design.widget.TextInputLayout>

        //Adress

        <android.support.design.widget.TextInputLayout
            android:id="@+id/address_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:hint="@string/address">

            <EditText
                android:id="@+id/address_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/estimatedWorkTime"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/activity_general_margin"
            android:layout_weight="2.48"
            android:orientation="horizontal"
            android:weightSum="1">

            //DaysSpinner

            <Spinner
                android:id="@+id/daysSpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:entries="@array/daysSpinnerItems"
                android:spinnerMode="dialog" />

            //HoursSpinner

            <Spinner
                android:id="@+id/hoursSpinner"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:entries="@array/hoursSpinnerItems"
                android:spinnerMode="dialog" />

            //MinutesSpinner

            <Spinner
                android:id="@+id/minutesSpinner"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:entries="@array/minutesSpinnerItems"
                android:spinnerMode="dialog" />

        </LinearLayout>

        // Available from

        <EditText
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:focusable="false"
            android:hint="@string/createdDate" />

        // Expires On

        <EditText
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:focusable="false"
            android:hint="@string/endDate" />

        // Difficulty

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/difficulty"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />

        <RatingBar
            android:id="@+id/difficultyBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:numStars="5"
            android:stepSize="1" />

        //Reward

        <EditText
            android:id="@+id/reward"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/reward" />


        <Button
            android:id="@+id/save_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_general_margin"
            android:layout_marginTop="@dimen/activity_general_margin"
            android:text="@string/save" />

    </LinearLayout>
</ScrollView>